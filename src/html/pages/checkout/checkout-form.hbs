<section class="checkout">
  <div class="container">

    <div class="swiper-container payment-swiper">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <div class="cart__wrapper">

            <div class="cart__block">

              <div class="cart__top-wrapper checkout__top-wrapper">
                <div class="checkout__arrow-wrapper">
                <a href="/src/pages/cart/cart.html">
                  <img
                    src="/src/assets/images/icons/arrow-left.svg"
                    width="30"
                    height="30"
                    loading="lazy"
                    alt="arrow"
                    class="checkout__arrow"
                  />
                </a>

                <h2 class="sections-title checkout__title">Checkout</h2>
                </div>

               <div class="checkout__pagination-wrapper">
                <span class="checkout__pagination checkout__pagination-active"></span>
