<section class="contact">
  <div class="container">
    <div class="contact__wrapper">
      <div class="contact__leaf">
        <div class="contact__leaf-left">
          <img
          src="/src/assets/images/icons/contact-one.svg"
          alt="green-leaf"
          class="leaf__image-one"
          width="90"
          height="80"
          loading="lazy"
        />
        </div>
        <div class="contact__leaf-right">
          <img
          src="/src/assets/images/icons/contact-two.svg"
          alt="green-leaf"
          class="leaf__image-two"
          width="200"
          height="101"
          loading="lazy"
        />
        <img
          src="/src/assets/images/icons/contact-three.svg"
          alt="green-leaf"
          class="leaf__image-three"
          width="30"
          height="101"
          loading="lazy"
        />
        <img
          src="/src/assets/images/icons/contact-four.svg"
          alt="green-leaf"
          class="leaf__image-four"
          width="119"
          height="101"
          loading="lazy"
        />
        </div>

        
      </div>
      <div class="contact__content">
        <div class="contact__info">
        <h1 class="contact__info--title">Contact us</h1>
        <p class="contact__info--sub-title">
          Send for us your request and we will get in touch with you as soon as
          possible
        </p>
        <div class="contact__info__details">
          <div class="info__details__number">
            <span class="details__number__cal">
              <img
                src="/src/assets/images/icons/calling.svg"
                class="number__cal--img"
                alt="calling-phone"
                width="24"
                height="24"
              />
            </span>
            <h3 class="details__number--text">+380 98 782 82 23</h3>
          </div>
          <div class="info__details__mail">
            <span class="details__mail__cal">
              <img
                src="/src/assets/images/icons/message.svg"
                class="mail__message--img"
                alt="calling-phone"
                width="24"
                height="24"
              />
            </span>
            <h3 class="details__mail--text">mailmail@gmail.com</h3>
          </div>
        </div>
      </div>
      
      <div class="contact__block__form">
        <form id="contactForm" class="contact__form">
        <div class="contact__form__group">
          <label
            for="name"
            class="form__group__label checkout__label"
          >Name</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Your name"
            class="form__group__input cart__input"
          />
          <span class="form__group__error error" id="nameError"></span>
        </div>
        <div class="contact__form__group">
          <label
            for="email"
            class="form__group__label checkout__label"
          >E-mail</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Your email"
            class="form__group__input cart__input"
          />
          <span class="form__group__error error" id="emailError"></span>
        </div>
        <div class="contact__form__group">
          <label
            for="message"
            class="form__group__label checkout__label"
          >Message</label>
          <textarea
            id="message"
            name="message"
            placeholder="Your message"
            class="form__group__textarea cart__input"
          ></textarea>

        </div>
        <div class="contact__form__request">
          <button type="submit" class="main-btn request--button">Send request</button>
          <p class="privacy-policy">By sending request you agree to our Privacy
            & Policy</p>
        </div>
      </form>
      </div>
      
      </div>
      <div class="contact__leaf-right">
        
        

      </div>
    </div>
  </div>
</section>